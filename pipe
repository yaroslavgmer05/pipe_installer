#!/bin/bash

# –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —Ü–≤–µ—Ç–æ–≤
CYAN='\033[1;36m'
YELLOW='\033[1;33m'
GREEN='\033[1;32m'
RED='\033[1;31m'
NC='\033[0m'

echo -e "${CYAN}–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ —É—Å—Ç–∞–Ω–æ–≤—â–∏–∫ –Ω–æ–¥—ã Hemi –æ—Ç Crypto Fire! –ü–æ–¥–¥–µ—Ä–∂–∏—Ç–µ –∞–≤—Ç–æ—Ä–∞ –∏ –ø–æ–¥–ø–∏—à–∏—Ç–µ—Å—å –Ω–∞ –∫–∞–Ω–∞–ª t.me/cryptofire8!${NC}"

# –§—É–Ω–∫—Ü–∏—è —É—Å—Ç–∞–Ω–æ–≤–∫–∏ –Ω–æ–¥—ã (—Å–∫–∞—á–∏–≤–∞–Ω–∏–µ –±–∏–Ω–∞—Ä–Ω–æ–≥–æ —Ñ–∞–π–ª–∞ –∏ —É—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π)
download_node() {
  # –ü—Ä–æ–≤–µ—Ä—è–µ–º, —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ –æ–±—ä–µ–∫—Ç —Å –∏–º–µ–Ω–µ–º "$HOME/pipe", –∏ –µ—Å–ª–∏ –¥–∞, —Ç–æ —è–≤–ª—è–µ—Ç—Å—è –ª–∏ –æ–Ω –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–µ–π
  if [ -e "$HOME/pipe" ] && [ ! -d "$HOME/pipe" ]; then
    echo -e "${RED}–û—à–∏–±–∫–∞: '$HOME/pipe' —Å—É—â–µ—Å—Ç–≤—É–µ—Ç, –Ω–æ –Ω–µ —è–≤–ª—è–µ—Ç—Å—è –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–µ–π. –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, —É–¥–∞–ª–∏—Ç–µ –∏–ª–∏ –ø–µ—Ä–µ–∏–º–µ–Ω—É–π—Ç–µ –µ–≥–æ –∏ –ø–æ–≤—Ç–æ—Ä–∏—Ç–µ –ø–æ–ø—ã—Ç–∫—É.${NC}"
    return 1
  fi

  if [ -d "$HOME/pipe" ]; then
    echo "–ü–∞–ø–∫–∞ 'pipe' —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç. –£–¥–∞–ª–∏—Ç–µ –Ω–æ–¥—É –∏ —É—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ –∑–∞–Ω–æ–≤–æ. –í—ã—Ö–æ–¥..."
    return 0
  fi

  echo -e "${GREEN}–û–±–Ω–æ–≤–ª—è–µ–º —Å–∏—Å—Ç–µ–º—É –∏ —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –Ω–µ–æ–±—Ö–æ–¥–∏–º—ã–µ –ø–∞–∫–µ—Ç—ã...${NC}"
  sudo apt update -y && sudo apt upgrade -y
  sudo apt install -y nano git gnupg lsb-release apt-transport-https jq screen ca-certificates curl wget lsof

  echo -e "${GREEN}–£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π –∑–∞–≤–µ—Ä—à–µ–Ω–∞.${NC}"
  echo -e "–ù–∞—á–∏–Ω–∞–µ–º —É—Å—Ç–∞–Ω–æ–≤–∫—É –Ω–æ–¥—ã Pipe...\n"

  # –°–æ–∑–¥–∞—ë–º –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é –¥–ª—è –Ω–æ–¥—ã –∏ –∫—ç—à–∞
  mkdir -p "$HOME/pipe/download_cache" || { echo -e "${RED}–ù–µ —É–¥–∞–ª–æ—Å—å —Å–æ–∑–¥–∞—Ç—å –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é $HOME/pipe/download_cache${NC}"; return 1; }
  cd "$HOME/pipe" || { echo -e "${RED}–ù–µ —É–¥–∞–ª–æ—Å—å –ø–µ—Ä–µ–π—Ç–∏ –≤ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é $HOME/pipe${NC}"; return 1; }

  echo -e "${YELLOW}–°–∫–∞—á–∏–≤–∞–µ–º –±–∏–Ω–∞—Ä–Ω—ã–π —Ñ–∞–π–ª –Ω–æ–¥—ã...${NC}"
  wget https://dl.pipecdn.app/v0.2.2/pop -O pop
  chmod +x pop

  echo -e "${GREEN}–£—Å—Ç–∞–Ω–æ–≤–∫–∞ –Ω–æ–¥—ã –∑–∞–≤–µ—Ä—à–µ–Ω–∞. –¢–µ–ø–µ—Ä—å –≤—ã –º–æ–∂–µ—Ç–µ –∑–∞–ø—É—Å—Ç–∏—Ç—å –Ω–æ–¥—É, –≤—ã–±—Ä–∞–≤ –ø—É–Ω–∫—Ç 2 –≤ –º–µ–Ω—é.${NC}"
}

# –§—É–Ω–∫—Ü–∏—è –∑–∞–ø—É—Å–∫–∞ –Ω–æ–¥—ã —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º screen
launch_node() {
  # –ï—Å–ª–∏ —Å–µ—Å—Å–∏—è —Å –∏–º–µ–Ω–µ–º "pipe" —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç, –∑–∞–≤–µ—Ä—à–∞–µ–º –µ—ë
  if screen -list | grep -q "pipe"; then
    echo -e "${YELLOW}–û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —É–∂–µ –∑–∞–ø—É—â–µ–Ω–Ω—É—é –Ω–æ–¥—É...${NC}"
    screen -S pipe -X quit
  fi

  cd "$HOME/pipe" || { echo -e "${RED}–î–∏—Ä–µ–∫—Ç–æ—Ä–∏—è $HOME/pipe –Ω–µ –Ω–∞–π–¥–µ–Ω–∞. –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ –Ω–æ–¥—É (–ø—É–Ω–∫—Ç 1).${NC}"; return 1; }

  # –°–æ–∑–¥–∞—ë–º –Ω–æ–≤—É—é —Å–µ—Å—Å–∏—é screen —Å –∏–º–µ–Ω–µ–º "pipe"
  screen -dmS pipe

  echo -e "${YELLOW}–í–≤–µ–¥–∏—Ç–µ –≤–∞—à –ø—É–±–ª–∏—á–Ω—ã–π –∞–¥—Ä–µ—Å Solana:${NC}"
  read -r SOLANA_PUB_KEY
  if [ -z "$SOLANA_PUB_KEY" ]; then
    echo -e "${RED}–ü—É–±–ª–∏—á–Ω—ã–π –∞–¥—Ä–µ—Å –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –ø—É—Å—Ç—ã–º.${NC}"
    return
  fi

  echo -e "${YELLOW}–í–≤–µ–¥–∏—Ç–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ RAM –≤ –ì–ë (—Ü–µ–ª–æ–µ —á–∏—Å–ª–æ):${NC}"
  read -r RAM
  if ! [[ "$RAM" =~ ^[0-9]+$ ]]; then
    echo -e "${RED}–ó–Ω–∞—á–µ–Ω–∏–µ RAM –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å —Ü–µ–ª—ã–º —á–∏—Å–ª–æ–º.${NC}"
    return
  fi

  echo -e "${YELLOW}–í–≤–µ–¥–∏—Ç–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ max-disk –≤ –ì–ë (—Ü–µ–ª–æ–µ —á–∏—Å–ª–æ):${NC}"
  read -r DISK
  if ! [[ "$DISK" =~ ^[0-9]+$ ]]; then
    echo -e "${RED}–ó–Ω–∞—á–µ–Ω–∏–µ max-disk –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å —Ü–µ–ª—ã–º —á–∏—Å–ª–æ–º.${NC}"
    return
  fi

  echo -e "${GREEN}–ó–∞–ø—É—Å–∫–∞–µ–º –Ω–æ–¥—É...${NC}"
  # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∫–æ–º–∞–Ω–¥—É –∑–∞–ø—É—Å–∫–∞ –≤ —Å–µ—Å—Å–∏—é screen
  screen -S pipe -X stuff "./pop --ram $RAM --max-disk $DISK --cache-dir \$HOME/pipe/download_cache --pubKey $SOLANA_PUB_KEY$(printf \\r)"
  sleep 3
  # –ü—Ä–∏ –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ—Å—Ç–∏ –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—É—é –∫–æ–º–∞–Ω–¥—É (–Ω–∞–ø—Ä–∏–º–µ—Ä, –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ –∏–ª–∏ —Ç–æ–∫–µ–Ω)
  screen -S pipe -X stuff "e4313e9d866ee3df$(printf \\r)"
  echo -e "${GREEN}–ù–æ–¥–∞ —É—Å–ø–µ—à–Ω–æ –∑–∞–ø—É—â–µ–Ω–∞!${NC}"
}

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø—Ä–æ—Å–º–æ—Ç—Ä–∞ –ª–æ–≥–æ–≤ (—Å–æ–∑–¥–∞—ë—Ç hardcopy —Ç–µ–∫—É—â–µ–π —Å–µ—Å—Å–∏–∏ screen)
node_logs() {
  if screen -list | grep -q "pipe"; then
    screen -S pipe -X hardcopy /tmp/pipe_logs.txt
    echo -e "${CYAN}–õ–æ–≥–∏ –Ω–æ–¥—ã (—Å–µ—Å—Å–∏—è 'pipe'):${NC}"
    cat /tmp/pipe_logs.txt
  else
    echo -e "${RED}–ù–æ–¥–∞ –Ω–µ –∑–∞–ø—É—â–µ–Ω–∞ –∏–ª–∏ —Å–µ—Å—Å–∏—è 'pipe' –Ω–µ –Ω–∞–π–¥–µ–Ω–∞.${NC}"
  fi
}

# –§—É–Ω–∫—Ü–∏—è –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞ –Ω–æ–¥—ã (–æ—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç –∏ –∑–∞–ø—É—Å–∫–∞–µ—Ç –∑–∞–Ω–æ–≤–æ)
restart_node() {
  if screen -list | grep -q "pipe"; then
    echo -e "${YELLOW}–ü–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞–µ–º –Ω–æ–¥—É...${NC}"
    screen -S pipe -X quit
    launch_node
  else
    echo -e "${RED}–ù–æ–¥–∞ –Ω–µ –∑–∞–ø—É—â–µ–Ω–∞. –ó–∞–ø—É—Å—Ç–∏—Ç–µ –Ω–æ–¥—É, –≤—ã–±—Ä–∞–≤ –ø—É–Ω–∫—Ç 2.${NC}"
  fi
}

# –§—É–Ω–∫—Ü–∏—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∏ –Ω–æ–¥—ã (–∑–∞–≤–µ—Ä—à–∞–µ—Ç —Å–µ—Å—Å–∏—é screen)
stop_node() {
  if screen -list | grep -q "pipe"; then
    screen -S pipe -X quit
    echo -e "${GREEN}–ù–æ–¥–∞ –±—ã–ª–∞ –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞.${NC}"
  else
    echo -e "${RED}–ù–æ–¥–∞ –Ω–µ –∑–∞–ø—É—â–µ–Ω–∞.${NC}"
  fi
}

# –§—É–Ω–∫—Ü–∏—è —É–¥–∞–ª–µ–Ω–∏—è –Ω–æ–¥—ã (—É–¥–∞–ª—è–µ—Ç –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é —Å –Ω–æ–¥–æ–π)
delete_node() {
  read -p "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å –Ω–æ–¥—É? (y/n): " confirm
  if [ "$confirm" != "y" ]; then
    echo "–û—Ç–º–µ–Ω–∞ —É–¥–∞–ª–µ–Ω–∏—è."
    return
  fi

  if screen -list | grep -q "pipe"; then
    screen -S pipe -X quit
  fi

  rm -rf "$HOME/pipe"
  echo -e "${GREEN}–ù–æ–¥–∞ –±—ã–ª–∞ —É–¥–∞–ª–µ–Ω–∞.${NC}"
}

# –ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é
while true; do
  echo -e "\n–ú–µ–Ω—é:"
  echo "1. üõ† –£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –Ω–æ–¥—É"
  echo "2. üöÄ –ó–∞–ø—É—Å—Ç–∏—Ç—å –Ω–æ–¥—É"
  echo "3. üìú –ü—Ä–æ—Å–º–æ—Ç—Ä–µ—Ç—å –ª–æ–≥–∏"
  echo "4. üîÑ –ü–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∏—Ç—å –Ω–æ–¥—É"
  echo "5. ‚õî –û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –Ω–æ–¥—É"
  echo "6. üóë –£–¥–∞–ª–∏—Ç—å –Ω–æ–¥—É"
  echo "7. ‚ùå –í—ã–π—Ç–∏"
  read -p "–í—ã–±–µ—Ä–∏—Ç–µ –ø—É–Ω–∫—Ç –º–µ–Ω—é: " choice

  case $choice in
    1) download_node ;;
    2) launch_node ;;
    3) node_logs ;;
    4) restart_node ;;
    5) stop_node ;;
    6) delete_node ;;
    7) exit 0 ;;
    *) echo "–ù–µ–≤–µ—Ä–Ω—ã–π –ø—É–Ω–∫—Ç. –ü–æ–≤—Ç–æ—Ä–∏—Ç–µ –≤–≤–æ–¥." ;;
  esac
done
